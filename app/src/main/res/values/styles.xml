        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@color/error_hint_text_color</item>
    </style>


    <style name="addEventFragmentMaxParticipantsUserInputText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/add_event_user_input_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLength">3</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">number</item>
        <item name="background">@color/transparent</item>
    </style>


