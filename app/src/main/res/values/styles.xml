    <style name="eventDetailViewFragmentHeaderText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/event_detail_view_header_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="eventDetailViewFragmentText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/event_detail_view_text_size</item>
