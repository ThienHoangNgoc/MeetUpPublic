    </style>

    <style name="sectionHeaderText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/sectionHeaderTextSize</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- StartFragment -->

    <style name="meetingEventTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/meeting_event_title_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="meetingEventOrganizerText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/meeting_event_title_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
